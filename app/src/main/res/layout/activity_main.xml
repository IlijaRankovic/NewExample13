    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_sceond_activity"
        android:id="@+id/app_second_activity"
        android:onClick="btnStartActivityClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_browser"
        android:id="@+id/open_browser"
        android:onClick="btnOpenBrowserClicked"/>

</LinearLayout>